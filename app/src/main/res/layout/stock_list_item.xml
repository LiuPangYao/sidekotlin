<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_constraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E0E0E0	"
            android:padding="10dp">

            <TextView
                android:id="@+id/stock_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="商品"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintHorizontal_weight="2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/stock_deal"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/stock_deal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="成交"
                android:textColor="#00A600"
                android:textSize="14sp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/stock_name"
                app:layout_constraintRight_toLeftOf="@id/stock_quoteChange"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/stock_quoteChange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="漲跌"
                android:textColor="#00A600"
                android:textSize="14sp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/stock_deal"
                app:layout_constraintRight_toRightOf="@id/stock_increase"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/stock_increase"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="跌幅％"
                android:textColor="#00A600"
                android:textSize="14sp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/stock_quoteChange"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>