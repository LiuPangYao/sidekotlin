<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#007500"
    android:padding="7dp">

    <TextView
        android:id="@+id/header_stock_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="商品"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/header_stock_deal"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header_stock_deal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="成交"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/header_stock_name"
        app:layout_constraintRight_toLeftOf="@id/header_stock_quoteChange"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header_stock_quoteChange"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="漲跌"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/header_stock_deal"
        app:layout_constraintRight_toRightOf="@id/header_stock_increase"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header_stock_increase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="跌幅％"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/header_stock_quoteChange"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>